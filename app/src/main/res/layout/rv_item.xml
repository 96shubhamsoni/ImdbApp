<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="2dp"
        android:padding="10dp"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="35dp">

     <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="?android:attr/selectableItemBackground">

        <ImageView
            app:layout_constraintCircleRadius="10dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/todo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="90dp"
            android:layout_height="140dp"
            android:id="@+id/movie_pic"
            android:src="@drawable/ic_baseline_person_24"/>

        <TextView
            tools:text ="shubham soni"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="@id/movie_overview"
            app:layout_constraintTop_toTopOf="@id/movie_pic"
            app:layout_constraintBottom_toTopOf="@id/movie_overview"
            android:textColor="@color/black"
            android:id="@+id/movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            tools:text ="8877000958"
            app:layout_constraintStart_toEndOf="@id/movie_pic"
            app:layout_constraintTop_toBottomOf="@id/movie_title"
            android:layout_margin="10dp"
            android:textColor="#000000"
            android:id="@+id/movie_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



     </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>